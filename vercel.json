{
    "builds": [
      {
        "src": "api/index.php",  
        "use": "@vercel/php"
      },
      {
        "src": "package.json",  
        
        "use": "@vercel/static-build",
        "config": { "distDir": "public" }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",   
        "dest": "/index.php"
      }
    ]
  }
  